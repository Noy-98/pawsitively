<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbg"
    android:paddingTop="70dp">

    <EditText
        android:id="@+id/search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_background"
        android:hint="Search for a user"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/community_chat_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_box_background"
        android:padding="10dp"
        android:gravity="center"
        android:text="Community Chat"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true" />

    <ListView
        android:id="@+id/search_results_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/recent_chats_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Chats"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/recent_chats_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:visibility="visible" />
</LinearLayout>
